# VEO3 AI Backend Environment Variables
# Copy this file to .env and fill in the values

# Application
NODE_ENV=development
PORT=3001

# Database - PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/veo3db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=veo3-jwt-secret-change-in-production-2024
JWT_EXPIRES_IN=7d

# Electron App JWT (separate secret)
ELECTRON_JWT_SECRET=veo3-electron-jwt-secret-change-in-production-2024
ELECTRON_JWT_EXPIRES_IN=24h

# Password Hashing
BCRYPT_SALT_ROUNDS=10

# Session
SESSION_MAX_AGE=86400000

# OTP
OTP_EXPIRES_MINUTES=10

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id

# Bank Transfer Info
BANK_ID=970436
BANK_NAME=Vietcombank
BANK_ACCOUNT=1234567890
BANK_ACCOUNT_NAME=NGUYEN VAN A

# SMTP Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=VEO3 AI <noreply@veo3ai.com>

# App Download Links
APP_DOWNLOAD_WINDOWS=https://storage.example.com/veo3-win.exe
APP_DOWNLOAD_MAC=https://storage.example.com/veo3-mac.dmg
APP_DOWNLOAD_LINUX=https://storage.example.com/veo3-linux.AppImage

# License Configuration
LICENSE_PREFIX=VEO3
DEFAULT_MAX_DEVICES=1

# Activity Log Retention (days)
ACTIVITY_LOG_RETENTION_DAYS=90
